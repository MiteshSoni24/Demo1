CREATE DATABASE DEMO;

USE DEMO;



CREATE TABLE EMPLOYEE(ID INT PRIMARY KEY,NAME VARCHAR(50));

SHOW TABLES;//show name of tables

DESC EMPLOYEE;//show details of tables

INSERT INTO EMPLOYEE VALUES(1,"MITESH"),(2,"RAMESH");

SELECT * FROM EMPLOYEE;//show all details

UPDATE EMPLOYEE SET NAME="MITESH SONI" WHERE ID=1;

DELETE FROM EMPLOYEE WHERE ID=2;



CREATE TABLE EMP_ADDRESS(ADDRESSID INT PRIMARY KEY,CITY VARCHAR(20),STATE VARCHAR(20),PIN INT);

ALTER TABLE EMPLOYEE ADD ADDRESSINFO INT;//Add more fields in a Table

ALTER TABLE EMPLOYEE ADD FOREIGN KEY(ADDRESSINFO) REFERENCES EMP_ADDRESS(ADDRESSID);



DESC EMPLOYEE;

SELECT * FROM EMPLOYEE;

INSERT INTO EMP_ADDRESS VALUES(1,"UJJAIN","MP",456001);

UPDATE EMPLOYEE SET ADDRESSINFO=1 WHERE ID=1;

SELECT * FROM EMPLOYEE;



CREATE DATABASE DEMO1;

USE DEMO1;

CREATE TABLE EMPLOYEE (ID INT PRIMARY KEY, NAME VARCHAR(50) NOT NULL, ADDRESSINFO INT);

DESC EMPLOYEE;



USE DEMO;

DESC EMPLOYEE;

DESC EMP_ADDRESS;

SELECT * FROM EMPLOYEE,EMP_ADDRESS WHERE ADDRESSiNFO=ADDRESSID;

SELECT E.ID,E.NAME,A.CITY,A.STATE,A.PIN FROM EMPLOYEE E,EMP_ADDRESS A
    -> WHERE E.ADDRESSINFO=A.ADDRESSID;

SELECT E.NAME,A.CITY FROM EMPLOYEE E,EMP_ADDRESS A
    -> WHERE E.ADDRESSINFO=A.ADDRESSID;

